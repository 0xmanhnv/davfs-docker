# Roots of the synchronization
root = /mnt/webdrive
root = /mnt/source

# Log actions
log = true

# Sync settings
fastcheck = true
auto = true
batch = true
times = true
owner = true
group = true
prefer = newer

# Ignore 
ignore = Name temp.*
ignore = Name .*
ignore = Name *.tmp
ignore = Path lost+found

# Daemonize 
repeat = 30


logfile = /tmp/unisonlog
